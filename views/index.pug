extends layout

block content
  .container
    .row
      .col
        .login_form
          form(action="/", method="post")
            input.custom-form-control(type='email', name='email', placeholder='Email', required='')
            input.custom-form-control(type='password', name='password', placeholder='Password', required='')
            button.button.w-75.mx-auto(type='submit') Login
          a.float-right(href='#') Forgot Password

